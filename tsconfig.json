{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngrxsample/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@ngrxsample/sam/feature-shell": ["libs/sam/feature-shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
